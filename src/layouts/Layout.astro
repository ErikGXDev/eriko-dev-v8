---
import { ViewTransitions } from "astro:transitions";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="font-main">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Bricolage+Grotesque:wght@400;500;600;700;800&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
    <ViewTransitions />

    <!-- Primary Meta Tags -->
    <title>Hi, I'm ErikGXDev - eriko.dev</title>
    <meta name="title" content="Hi, I'm ErikGXDev - eriko.dev" />
    <meta
      name="description"
      content="I'm a fullstack developer who creates websites and apps using Javascript Frameworks."
    />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://eriko.dev/" />
    <meta property="og:title" content="Hi, I'm ErikGXDev - eriko.dev" />
    <meta
      property="og:description"
      content="I'm a fullstack developer who creates websites and apps using Javascript Frameworks."
    />
    <meta property="og:image" content="https://eriko.dev/seo.png" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://eriko.dev/" />
    <meta property="twitter:title" content="Hi, I'm ErikGXDev - eriko.dev" />
    <meta
      property="twitter:description"
      content="I'm a fullstack developer who creates websites and apps using Javascript Frameworks."
    />
    <meta property="twitter:image" content="https://eriko.dev/seo.png" />

    <!-- Meta Tags Generated with https://metatags.io -->
  </head>
  <body class="bg-gx-gray-950 text-gray-50 flex justify-center px-4 md:p-0">
    <div class="max-w-3xl w-full min-h-screen flex flex-col">
      <slot />
    </div>
  </body>
</html>
