---
import Navbar from "@components/nav/Navbar.astro";
import Layout from "./Layout.astro";
import FormattedDate from "@components/blog/FormattedDate.astro";
import Footer from "@components/nav/Footer.astro";
import Icon from "astro-icon";
import Main from "@components/Main.astro";
import Tags from "@components/Tags.astro";

const { title, description, pubDate, tags } = Astro.props;
---

<Layout title={title}>
  <Navbar />

  <Main transition="slide">
    <div class="flex flex-col mb-12 gap-2">
      <h1
        class="text-4xl bg-gradient-to-r from-amber-500 to-gx-rose-500 text-transparent bg-clip-text w-fit font-bold"
      >
        {title}
      </h1>
      <p class="text-lg">{description}</p>
      <FormattedDate date={pubDate} />
    </div>
    <article class="py-12 border-t border-t-gx-gray-800 prose prose-invert">
      <slot />
    </article>
    <button
      class="w-fit flex gap-1 items-center mb-8 text-gx-gray-300 hover:text-gx-gray-400"
      onclick="
      window.history.back()
      "
    >
      <Icon name="fe:arrow-left" size="16" />
       Back to blog
    </button>
  </Main>
  <Footer />
</Layout>
